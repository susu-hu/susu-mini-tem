  top: 55%;
  z-index: 10;
  border-radius: 50%;
}

.status_icon {
  width: 27rpx;
  height: 27rpx;
  flex-shrink: 0;
  margin-right: 12rpx;
  border-radius: 50%;
}

.mt18 {
  margin-top: 18rpx;
}