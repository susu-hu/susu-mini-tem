.container {
  background: #fff;
  width     : 710rpx;
  margin    : 20rpx;
  min-height: 500rpx;

}

.box {
  width        : 710rpx;
  height       : 800rpx;
  border-radius: 10rpx;
  overflow     : hidden;
}

.anim {
  animation: show-scale .6s linear;
}

@keyframes show-scale {
  0% {
    transform: scale(0.1);
  }

  70% {
    transform: scale(1.1);
  }

  100% {
    transform: scale(1);
  }
}

.text {
  position   : relative;
  font-size  : 60rpx;
  font-weight: bold;
  margin-left: 20px;
  color      : skyblue;
}

.text::after {
  content     : attr(data-attr);
  position    : absolute;
  z-index     : 10;
  left        : 0;
  top         : 0;
  color       : pink;
  mask        : linear-gradient(to left, red, transparent);
  -webkit-mask: linear-gradient(to left, red, transparent);
}