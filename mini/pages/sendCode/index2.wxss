.left1 {
  width: 18rpx;
  height: 18rpx;
  border-top: 2px solid #867f7a;
  border-right: 2px solid #867f7a;
  transform: rotate(45deg);
}

.i {
  border: solid black;
  border-width: 0 1px 1px 0;
  display: inline-block;
  padding: 3px;
}

.right {
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}

.left {
  transform: rotate(135deg);
  -webkit-transform: rotate(135deg);
}

.up {
  transform: rotate(-135deg);
  -webkit-transform: rotate(-135deg);
}

.down {
  transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
}

.box {
  border-top: 40rpx solid #a4d1eb;
  border-left: 25rpx solid transparent;
  border-right: 25rpx solid transparent;
  height: 0;
  width: 100rpx;
}

.triangle-up {
  width: 0;
  height: 0;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-bottom: 20rpx solid #a4d1eb;
}

.triangle-down {
  width: 0;
  height: 0;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-top: 20rpx solid #a4d1eb;
}

.triangle-left {
  width: 0;
  height: 0;
  border-top: 20rpx solid transparent;
  border-bottom: 20rpx solid transparent;
  border-right: 20rpx solid #a4d1eb;
}

.triangle-right {
  width: 0;
  height: 0;
  border-top: 20rpx solid transparent;
  border-bottom: 20rpx solid transparent;
  border-left: 20rpx solid #a4d1eb;
}

.triangle-topleft {
  width: 0;
  height: 0;
  border-top: 20rpx solid #a4d1eb;
  border-right: 20px solid transparent;
}

