page {
  background: #fff;
  padding-bottom: 300rpx;
}

.head_top {
  width: 100%;
  height: 100rpx;
  position: relative;
  z-index: -1;
  overflow: hidden;
}

.head_top::after {
  content: '';
  width: 140%;
  height: 100rpx;
  position: absolute;
  z-index: -1;
  left: -20%;
  top: 0;
  border-radius: 0 0 50% 50%;
  background: #a4d1eb;
}

.bg_img {
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 750rpx;
  filter: blur(10rpx);
}

.top {
  padding: 250rpx 0 20rpx;
}

.top image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.top text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #fff;
  margin-bottom: 40rpx;
}

.btn {
  margin-top: 20rpx;
  font-size: 28rpx;
