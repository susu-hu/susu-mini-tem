.main {
  width: 100px;
  height: 100px;
  border: 1px solid #0981E6;
  position: relative;
}

.main:before {
  content: '';
  position: absolute;
  right: -10px;
  width: 0;
  height: 0;
  border-left: 10px solid transparent;
  border-right: 10px solid transparent;
  left: 17%;
  margin-left: -12px;
  top: -10px;
  border-bottom: 10px solid #0082df;
}

.main:after {
  content: '';
  position: absolute;
  top: 11px;
  width: 0;
  height: 0;
  border-right: 9px solid transparent;
  border-left: 9px solid transparent;
  left: 17%;
  margin-left: -11px;
  top: -9px;
  border-bottom: 9px solid #fff;
}


