}

.jux5 {
  width: 50rpx;
  height: 0;
  background-color: #a4d1eb;
  border: 30rpx solid transparent;
  border-bottom-color: #0c537c;
  border-right-color: #2592d1;
  border-left-color: #232c31;
  border-top-color: #1c3644;
}

.jux6 {
  width: 0;
  height: 0;
  overflow: hidden;
  /* 这里设置overflow, font-size, line-height */
  font-size: 0;
  /*是因为, 虽然宽高度为0, 但在IE6下会具有默认的 */
  line-height: 0;
  /* 字体大小和行高, 导致盒子呈现被撑开的长矩形 */
  background-color: #a4d1eb;
  border: 30rpx solid transparent;
  border-bottom-color: #0c537c;
  border-right-color: #2592d1;
  border-left-color: #232c31;
  border-top-color: #1c3644;
}

.jux7 {
  height: 20rpx;
  width: 20rpx;
  border-color: #0c537c #2592d1 #232c31 #1c3644;
  border-style: solid;
  border-width: 20rpx;
}

.jux8 {
  height: 0;
  width: 0;
  overflow: hidden;
  font-size: 0;
  line-height: 0;
  border-color: #2592d1 transparent transparent transparent;
  border-style: solid;
  border-width: 20rpx;
  /* IE6下不支持透明啊用下面的就可以了 */
  /* border-style:solid dashed dashed dashed; */
}

.jux9 {
  height: 0;
  width: 0;
  overflow: hidden;
  font-size: 0;
  line-height: 0;
  border-color: #6c94c2 #193eaf transparent transparent;
  border-style: solid solid dashed dashed;
  border-width: 40rpx 40rpx 0 0;
}

