/* pages/jsCase/addressList/index.wxss */
.current-choose-city {
  position: fixed;
  width: 100%;
  height: 50px;
  line-height: 50px;
  padding: 0 10px;
  top: 0;
  left: 0;
  background-color: #fff;
  z-index: 10;
}

.right-nav {
  width: 30px;
  color: #888;
  text-align: center;
  position: fixed;
  bottom: 0;
  right: 0;
  background-color: rgb(200, 200, 200);
  z-index: 9;
}

.city-scroll {
  padding-top: 50px;
}

.city-code {
  background-color: #f7f7f7;
}

.city-list,
.city-code {
  height: 39px;
  line-height: 40px;
  padding: 0 30px 0 10px;
  overflow: hidden;
  border-bottom: 1px solid #c8c7cc;
}

.city-list-active {
  color: #007aff;
}

/*提示点击的字母  */
.city-layer {
  width: 70px;
  height: 70px;
  line-height: 70px;
  text-align: center;
  border-radius: 50%;
  color: #fff;
  background-color: rgba(0, 0, 0, .7);
  position: fixed;
  top: calc(50% - 35px);
  left: calc(50% - 35px);
  z-index: 11;
}

.layer-hide {
  display: none;
}