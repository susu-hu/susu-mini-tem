/* pages/jsCase/mapLocation/index.wxss */
page {
  height: 100%;
}

.box {
  height: 100%;
}

map {
  width : 100%;
  height: 100%;
}

.cover-image {
  height     : 60rpx;
  width      : 60rpx;
  position   : fixed;
  top        : 50%;
  left       : 50%;
  margin-top : -30rpx;
  margin-left: -30rpx;
}

.address_box {
  width           : 710rpx;
  position        : fixed;
  bottom          : 40rpx;
  left            : 50%;
  transform       : translateX(-50%);
  padding         : 30rpx;
  box-sizing      : border-box;
  background-color: #fff;
  border-radius   : 18rpx;
  color           : #555;
  font-size       : 28rpx;
}

.adress {
  padding      : 20rpx 0;
  border-bottom: 1rpx solid #eaeef1;
}

.adress:last-child {
  border-bottom: none;
}

.adress .b {
  height       : 16rpx;
  width        : 16rpx;
  border-radius: 8rpx;
  background   : #5677fc;
  margin-right : 20rpx;
  flex-shrink  : 0;
}

.adress .d {
  background-color: orange;
}

.show {
  animation: awvae .7s ease-in-out;
}

@keyframes awvae {
  40% {
    transform: scale(1.4);
  }

  70% {
    transform: scale(0.4);
  }

  100% {
    transform: scale(1);
  }
}