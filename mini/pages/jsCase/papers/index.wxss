/* pages/jsCase/papers/index.wxss */
page {
  padding-bottom: calc(env(safe-area-inset-bottom) + 120rpx);
  padding-bottom: calc(constant(safe-area-inset-bottom)+ 120rpx);
}

.hd {
  margin: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 15rpx;

}

.choose_box {
  line-height: 55rpx;
}

.check_img {
  width: 35rpx;
  height: 35rpx;
}

.title {
  font-size: 33rpx;
  font-weight: bold;
  color: #333;
}

radio {
  transform: scale(0.8);
}

radio .wx-radio-input.wx-radio-input-checked {
  background: #0394F0 !important;
  border-color: #0394F0 !important;
}

checkbox {
  transform: scale(0.8);
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #0394F0 !important;
  border-color: #0394F0 !important;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 18rpx;
  height: 18rpx;
  line-height: 18rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.name {
  font-size: 26rpx;
  color: #333;
}

/* BTN */
.bottom_fix {
  width: 100%;
  padding-top: 10rpx;
  position: fixed;
  bottom: 0;
  z-index: 99;
  background-color: #fff;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}


.bottom_btn {
  width: 702rpx;
  background: #96b5e2;
  border-radius: 44rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: 400;
  color: #FFFFFF;
}

.btn_ok {
  text-align: center;
  line-height: 80rpx;
  color: #4E7BBA;
}

.btn_pop {
  width: 256rpx;
  height: 72rpx;
  border-radius: 36rpx;
  text-align: center;
  line-height: 72rpx;
  font-size: 30rpx;
  color: #4E7BBA;
}

.xian {
  width: 2rpx;
  height: 80rpx;
  background-color: #CACACA;
}

.heng {
  width: 100%;
  height: 2rpx;
  background-color: #CACACA;
}

.test_img {
  width: 250rpx;
  height: 200rpx;
  padding-left: 55rpx;
}

.title_img {
  width: 250rpx;
  height: 200rpx;
  margin-left: 26rpx;
}

.c_head {
  padding-top: 20rpx;
}

.pop_info {
  position: fixed;
  top: 140rpx;
  right: 30rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-color: #96b5e2;
  z-index: 999;
  text-align: center;
  color: #fff;
  font-size: 25rpx;
}