page {
  background: #222;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.not_found {
  position: relative;
  margin: 0 auto;
  width: 650rpx;
  text-align: center;
}

.not_found_404 {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 150rpx;
  font-weight: bold;
  line-height: 150rpx;
  letter-spacing: 25rpx;
  color: #fff;
  -webkit-transform: rotate(18deg);
  transform: rotate(18deg);
  -webkit-transform-origin: 12% 60%;
  transform-origin: 12% 60%;
  animation: 4s not_found ease-in-out infinite;
  -webkit-animation: 4s not_found ease-in-out infinite;
}

@keyframes  not_found {
  0% {}

  25% {
    -webkit-transform: rotate(12deg);
  }

  50% {
    -webkit-transform: rotate(18deg);
  }

  75% {
    -webkit-transform: rotate(12deg);
  }

  100% {
    -webkit-transform: rotate(18deg);
  }
}
@-webkit-keyframes not_found {
  0% {}

  25% {
    -webkit-transform: rotate(12deg);
  }

  50% {
    -webkit-transform: rotate(18deg);
  }

  75% {
    -webkit-transform: rotate(12deg);
  }

  100% {
    -webkit-transform: rotate(18deg);
  }
}

.not_found_404 span {
  cursor: pointer;
  text-shadow: 0px 0px 2px #686868,
    0px 1px 1px #ddd,
    0px 2px 1px #d6d6d6,
    0px 3px 1px #ccc,
    0px 4px 1px #c5c5c5,
    0px 5px 1px #c1c1c1,
    0px 6px 1px #bbb,
    0px 7px 1px #777,
    0px 8px 3px rgba(100, 100, 100, 0.4),
    0px 9px 5px rgba(100, 100, 100, 0.1),
    0px 10px 7px rgba(100, 100, 100, 0.15),
    0px 11px 9px rgba(100, 100, 100, 0.2),
    0px 12px 11px rgba(100, 100, 100, 0.25),
    0px 13px 15px rgba(100, 100, 100, 0.3);
  -webkit-transition: all .1s linear;
  transition: all .1s linear;
}

