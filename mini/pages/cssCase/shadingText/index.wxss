/* pages/cssCase/shadingText/index.wxss */
page {
  --TextColor: #5cc9e4;
  background-color: #f1e7e7;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

view {
  position: relative;
  text-align: center;
  font-size: 10vmin;
  background-color: #000;
  background-clip: text;
  -webkit-background-clip: text;
  color: transparent;
}

view::after {
  content: attr(data-text);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-image:
    linear-gradient(120deg, transparent 0%, transparent 4vmin, var(--TextColor) 8vmin, transparent 12vmin, transparent 16vmin, var(--TextColor) 20vmin, transparent 24vmin, transparent 28vmin, var(--TextColor) 32vmin, transparent 36vmin, transparent 100%);
  background-clip: text;
  -webkit-background-clip: text;
  z-index: 1;
  background-size: 200% 100%;
  background-repeat: no-repeat;
  animation: shine 3s infinite linear;
}

@keyframes shine {
  0% {
    background-position: 100% 0;
  }

  100% {
    background-position: -190% 0;
  }
}