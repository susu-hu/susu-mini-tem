/* 信用表盘（非原创） */
.back {
  position: relative;
  margin: 50px auto;
  width: 150px;
  height: 150px;
  border-radius: 50%;
  background: conic-gradient(
      #f1462c 0%,
      #fc5d2c 12.4%,
      #fff 12.5%,
      #fff 12.5%,
      #fc5d2c 12.5%,
      #fba73e 24.9%,
      #fff 24.9%,
      #fff 25%,
      #fba73e 25%,
      #e0fa4e 37.4%,
      #fff 37.4%,
      #fff 37.5%,
      #e0fa4e 37.5%,
      #12dd7e 49.9%,
      #fff 49.9%,
      #fff 50%,
      #12dd7e 50%,
      #0a6e3f 62.4%,
      #fff 62.4%,
      #fff 62.5%
  );
  transform: rotate(-112.5deg);
  transform-origin: 50% 50%;
}

.back::before {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 120px;
  height: 120px;
  border-radius: 50%;
  background: #fff;
}

.back::after {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100px;
  height: 100px;
  border-radius: 50%;
  background: radial-gradient(
          #fff 0%,
          #fff 25%,
          transparent 25%,
          transparent 100%
      ),
      conic-gradient(
          #f1462c 0 12.5%,
          #fba73e 0 25%,
          #e0fa4e 0 37.5%,
          #12dd7e 0 50%,
          #0a6e3f 0 62.5%,
          #fff 0 100%
      );
}

.dots {
  position: absolute;
  width: 10px;
  height: 10px;
  transform: translate(-50%, -50%);
  left: 50%;
  top: 50%;
  background: radial-gradient(#467dc6 0%, #a4c6f3 100%);
  border-radius: 50%;
  z-index: 999;
}

.dots::before {
  content: "";
  position: absolute;
  width: 5rpx;
  height: 120px;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%) rotate(0);
  border-radius: 100% 100% 5% 5%;
  background: linear-gradient(
      180deg,
      #9bc7f6 0,
      #467dc6 50%,
      transparent 50%,
      transparent 100%
  );
  animation: rotate 3s cubic-bezier(.93, 1.32, .89, 1.15) infinite;
}

@keyframes rotate {
  50% {
      transform: translate(-50%, -50%) rotate(150deg);
  }
  100% {
      transform: translate(-50%, -50%) rotate(150deg);
  }
}