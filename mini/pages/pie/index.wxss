/* pages/pie/index.wxss */
page{
  background: #e0bbc3;
  padding-bottom: env(safe-area-inset-bottom);
  padding-bottom: constant(safe-area-inset-bottom) 
}
.con{
  margin: 20rpx;
  background: #FFF;
  width: 710rpx;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  position: relative;
}
.top{
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 63rpx;
}
.down_img{
  width: 20rpx;
  height: 12rpx;
}

/* pie_box */
.pie_box{
  width: 641rpx;
  height: 604rpx;
  margin: 0 auto;
  box-sizing: border-box;
  position: relative;
}

.canvas {
  width: 100%;
  /* transform: scale(0.5) */
}
/* data */
.data{
  margin: 84rpx 20rpx 0;
}
.item{
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #ccc;
  margin-bottom: 24rpx;
}
.text1{
  font-size: 24rpx;
  color: #333333;
}
.text2{
  font-size: 24rpx;
  font-weight: 600;
  color: #333333;
}
.none_text{
  margin-top: 60rpx;
  text-align: center;
  font-size: 22rpx;
  color: #333333;
}
/* 半圆 */
.circle1{
  position: absolute;
  width: 28rpx;
  height: 54rpx;
  border-radius: 0 28rpx 28rpx 0;
  background: #e0bbc3;
  top:722rpx;
  left: 0;
}
.circle2{
  position: absolute;
  width: 28rpx;
  height: 54rpx;
  border-radius: 28rpx 0 0 28rpx;
  background: #e0bbc3;
  right: 0;
  top:722rpx;
}

/* line_box */
.line_box{
  margin: 50rpx auto;
  width: 641rpx;
  height: 604rpx;
  position: relative;
}
.navItem{
  justify-content: flex-end;
  font-size:25rpx;
  color: #333;
}
.btn{
  margin-left: 30rpx;
}
.color{
  color: #e0bbc3;
}