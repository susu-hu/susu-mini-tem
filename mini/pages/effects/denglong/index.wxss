/* pages/canvas/denglong/index.wxss */
page {
  height: 100%;
  background: #222;
}

.container {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  transform-style: preserve-3d;
  perspective: 600px;
  perspective-origin: center center;
}

.box {
  position: relative;
  width: 0;
  height: 0;
  animation: rotate 9s linear infinite;
  transform-style: preserve-3d;
}

@keyframes rotate {
  0% {
    transform: rotateY(0)
  }

  100% {
    transform: rotateY(360deg)
  }
}

.octagon {
  position: relative;
  width: 0px;
  height: 0px;
  transform-style: preserve-3d;
}

.octagon .surface {
  animation: twinkle 2s ease-in-out infinite;
}

@keyframes twinkle {
  0% {
    box-shadow: rgba(0, 0, 0, .1) 0 0 1px;
  }

  50% {
    box-shadow: #fffea1 0 0 20px;
  }

  100% {
    box-shadow: rgba(0, 0, 0, .1) 0 0 1px;
  }

}

.surface {
  position: absolute;
  left: -40px;
  top: -100px;
  width: 80px;
  height: 150px;
  background: radial-gradient(#fffea1, #fffea1, #fbd342);
  transform-origin: center;
  overflow: hidden;
}

.surface::after {
  position: absolute;
  content: '';
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  border: #e36d00 solid 4px;
  border-right-width: 2px;
  border-left-width: 2px;
  box-sizing: border-box;
}

.surface::before {
  position: absolute;
  left: 10px;
  top: 10px;
  width: 60px;
  height: 130px;
  box-sizing: border-box;
  content: '';
  border: solid 3px #e36d00;
}

.front {
  transform: rotateY(0) translateZ(69px);
}

.right-front {
  transform: rotateY(60deg) translateZ(69px);
}

.right-rear {
  transform: rotateY(120deg) translateZ(69px);
}

.rear {
  transform: rotateY(180deg) translateZ(69px);
}

.left-rear {
  transform: rotateY(-120deg) translateZ(69px);
}

.left-front {
  transform: rotateY(-60deg) translateZ(69px);
}

.surface.up {
  left: -80px;
  top: -100px;
  width: 160px;
  height: 0;
  transform: rotateX(90deg);
  overflow: visible;
}

.surface.bottom {
  left: -80px;
  top: 50px;
  width: 160px;
  height: 0;
  transform: rotateX(90deg);
  overflow: visible;
}

.surface.bottom::after,
.surface.up::after {
  position: absolute;
  left: 0;
  top: 0;
  width: 160px;
  height: 0;
  border: none;
  border-top: #e36d00 solid 69px;
  border-left: 40px solid transparent;
  border-right: 40px solid transparent;
  border-bottom: none;
}

.surface.bottom::before,
.surface.up::before {
  position: absolute;
  left: 0 !important;
  top: -69px !important;
  width: 160px;
  height: 0;
  content: '';
  border: none;
  border-bottom: #e36d00 solid 69px;
  border-left: 40px solid transparent;
  border-right: 40px solid transparent;
  box-sizing: border-box;
}

.surface-decoration {
  position: absolute;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border: solid 3px #e36d00;
}

.surface-decoration.left-top {
  left: -20px;
  top: -20px;
}

.surface-decoration.right-top {
  right: -20px;
  top: -20px;
}

.surface-decoration.left-bottom {
  left: -20px;
  bottom: -20px;
}

.surface-decoration.right-bottom {
  right: -20px;
  bottom: -20px;
}

.extra {
  position: absolute;
  top: -100px;
  width: 96px;
  height: 150px;
  transform-origin: left center;
}

.extra::before {
  position: absolute;
  right: 0px;
  top: 0px;
  width: 20px;
  height: 15px;
  content: '';
  border: solid 3px #e36d00;
}

.extra::after {
  position: absolute;
  right: 8px;
  top: 10px;
  width: 10px;
  height: 15px;
  content: '';
  border: solid 3px #e36d00;
}

.extra-60 {
  transform: rotateY(60deg);
}

.extra-120 {
  transform: rotateY(120deg);
}

.extra-180 {
  transform: rotateY(180deg);
}

.extra-240 {
  transform: rotateY(240deg);
}

.extra-300 {
  transform: rotateY(300deg);
}

