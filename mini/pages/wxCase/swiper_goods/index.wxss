/* pages/wxCase/swiper_goods/index.wxss */
.act {
  margin: 18rpx;
  overflow: hidden;
  position: relative;
  height: 228rpx;
  background: pink;
  border-radius: 20rpx;
}

.point_con {
  position: absolute;
  top: 19rpx;
  left: 107rpx;
  width: 84%;
  white-space: nowrap;
  overflow-y: auto;
  box-sizing: border-box;
}


.point_con .swiper-box {
  height: 192rpx;
  overflow: hidden;
}

.point_flex {
  float: left;
  width: 33.33%;
  height: 192rpx;
  text-align: center;
}

.point_img {
  display: block;
  width: 145rpx;
  height: 154rpx;
  box-shadow: 0px 3rpx 6rpx rgb(243, 210, 216);
  border-radius: 16rpx;
  margin: 0 auto;
  margin-bottom: 9rpx;
}

.point_text {
  height: 30rpx;
  font-size: 22rpx;
  line-height: 30rpx;
  color: #fff;
  text-align: center;
}

.t_box {
  width: 110rpx;
  height: 100%;
  background-color: rgb(223, 181, 181);
  text-align: center;
}

.title {
  white-space: pre-wrap;
  width: 50rpx;
  text-align: center;
  font-weight: 600;
  color: #fff;
  font-size: 30rpx;
  /* margin: 0 auto;
  position: relative;
  top: 50%; 
  transform: translateY(-50%); */
  display: inline-block;
  vertical-align: middle;
}

.t_box:after {
  content: '';
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}

.point_flex_w {
  float: left;
  width: 100%;
  height: 192rpx;
  text-align: center;
}


.wd1 {
  width: 28%;
}

.wd2 {
  width: 56%;
}