/* pages/wxCase/customHead/index.wxss */
page {
  width: 100%;
}

.header {
  width: 100%;
  position: relative;
  height: 570rpx;
}

.header .header-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  clip-path: ellipse(95% 50% at 50% 35%);
}

.head-back {
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 50rpx;
  border-radius: 50rpx;
  border: 1rpx solid rgba(204, 204, 204, .6);
  width: 170rpx;
  margin-left: 25rpx;
  position: relative;
}

.head-back image {
  width: 40rpx;
  height: 40rpx;
}

.head-back::after {
  content: '';
  position: absolute;
  width: 2rpx;
  height: 80%;
  background: #fff;
  left: calc(50% - 1rpx);
  top: 10%;
}