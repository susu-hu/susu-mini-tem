/* pages/wxCase/newsSwiper/index2.wxss */
page {
  background: #fff;
}

.box {
  margin: 40rpx auto;
  width: 632rpx;
  box-shadow: -6px 8px 81px 0px rgb(255, 192, 203, .73), 0px 0px 24px 0px #FFFFFF inset;
  border-radius: 30rpx;
  box-sizing: border-box;
  padding: 9rpx;
  margin-bottom: 25rpx;
}

.box_i {
  width: 614rpx;
  border-radius: 30rpx;
  box-shadow: 0px 0px 10px 0px rgb(255, 192, 203, .53), 0px 0px 27px 0px #FFFFFF inset;
  box-sizing: border-box;
  height: 460rpx;
  padding: 10rpx 48rpx
}

.swiper {
  /* 不要加padding */
  height: 460rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.item_sw {
  line-height: 60rpx;
}

.record_time {
  font-size: 28rpx;
  color: #333;
  white-space: nowrap;
}

.record_name {
  font-size: 30rpx;
  font-weight: bold;
  color: #a7d4ee;
}