.wrapper {
  display: flex;
  margin: 50rpx auto;
  width: 600rpx;
  overflow: hidden;
  border-radius: 8rpx;
  padding: 15rpx;
  box-shadow: 20rpx 20rpx 60rpx #bebebe,
    -20rpx -20rpx 60rpx #ffffff;
}

