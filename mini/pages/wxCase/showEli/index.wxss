}

.text {
  font-size: 28rpx;
  overflow: hidden;
  color: #fff;
  text-overflow: ellipsis;
  text-align: justify;
  position: relative;
  line-height: 40rpx;
  max-height: 160rpx;
}

.text::before {
  content: '';
  height: calc(100% - 23px);
  float: right;
}

.btn {
  position: relative;
  float: right;
  clear: both;
  margin-left: 20rpx;
  font-size: 25rpx;
  padding: 0 15rpx;
  background: #3F51B5;
  line-height: 42rpx;
  border-radius: 4rpx;
  height: 42rpx;
  color: #fff;
}

.btn::before {
  content: '...';
  position: absolute;
  left: -5rpx;
  color: #fff;
  transform: translateX(-100%)
}

.btn::after {
  content: '展开'
}

.ative {
  max-height: none;
}

.ative_label::after {
  content: '收起'
}

.ative_label::before {
  /*在展开状态下隐藏省略号*/
  visibility: hidden;
}


