}

.arrow {
  width: 18rpx;
  height: 18rpx;
  margin-left: 8rpx;
}

.head_sel {
  font-size: 28rpx;
  line-height: 38rpx;
  color: #333333;
  margin-bottom: 20rpx;
}

.head_sel picker {
  width: 33.3%;
}

.down_year {
  width: 20rpx;
  height: 10rpx;
  margin-left: 8rpx;
}

.head_ac {
  font-size: 26rpx;
  color: #1478BB;
  text-decoration: underline;
  width: 150rpx;
  text-align: right;
}

.head_date {
  font-size: 26rpx;
  color: #323232;
}

.con {
  padding: 243rpx 24rpx 0;
  width: 750rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.c_item {
  width: 702rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-sizing: border-box;
  padding: 20rpx;
  position: relative;
  font-size: 26rpx;
  font-weight: 500;
  color: #666666;
  /* overflow: hidden; */
}

.act_icon {
  width: 60rpx;
  height: 60rpx;
  flex-shrink: 0;
  margin-right: 15rpx;
}

.fix_bottom {
  height: 120rpx;
  width: 100%;
  background: #FFFFFF;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  font-size: 26rpx;
  color: #666;
  padding-bottom: env(safe-area-inset-bottom);
  padding-bottom: constant(safe-area-inset-bottom);
}

.btn {
  width: 240rpx;
  height: 80rpx;
  border: 1px solid #999999;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #999999;
  border-radius: 40rpx;
}

.btn:last-child {
  background: #999999;
  color: #fff;
  margin-left: 20rpx;
}

.btn_list {
  width: 100%;
  box-sizing: border-box;
  padding: 0 24rpx;
}

.status {
  width: 100rpx;
  height: 42rpx;
  text-align: center;
  line-height: 42rpx;
  border-radius: 0 21rpx 0 21rpx;
  font-size: 22rpx;
  font-weight: 500;
  position: absolute;
  z-index: 9;
  top: 0;
  right: 0;
}

.ing {
  background: #E8FCFC;
  border: 1rpx solid #23BCBC;
  color: #23BCBC;
}

.over {
  border: 1rpx solid #E52B10;
  background: #FCF7F5;
  color: #E52B10;
}

.item_title {
  font-size: 28rpx;
  font-weight: 500;
  color: #323232;
  margin-bottom: 6rpx;
  width: 485rpx;
}

.item_date {
  font-size: 24rpx;
  font-weight: 500;
  color: #999999;
  margin-bottom: 15rpx;
}

.item_theme {
  margin-bottom: 11rpx;
  width: 574rpx;
}

.theme_text {
  width: 352rpx;
}

.add_new {
  width: 98rpx;
  height: 98rpx;
  position: fixed;
  bottom: calc(env(safe-area-inset-bottom) + 184rpx);
  bottom: calc(constant(safe-area-inset-bottom)+ 184rpx);
  right: 40rpx;
  z-index: 999;
}

