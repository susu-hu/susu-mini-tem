/*checkbox 选项框大小  */
checkbox .wx-checkbox-input {
  width: 38rpx;
  height: 38rpx;
  border: 1px solid #147ABF;
  border-radius: 50%;
  margin-right: 42rpx;
}

/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #147ABF;
}

/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 30rpx;
  height: 30rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 18rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.btn_ative {
  border: 1rpx solid #147ABF;
  color: #147ABF;
}

.btn_ative:last-child {
  background: #147ABF;
  color: #fff;
}