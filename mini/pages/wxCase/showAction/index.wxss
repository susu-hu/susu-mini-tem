page {
  background: #F8F8F8;
  width: 100%;
  overflow-x: hidden;
  padding-bottom: calc(env(safe-area-inset-bottom) + 250rpx);
  padding-bottom: calc(constant(safe-area-inset-bottom)+ 250rpx);
}

.head {
  background: #F8F8F8;
  width: 750rpx;
  height: 243rpx;
  box-sizing: border-box;
  padding: 20rpx 24rpx 24rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.head_s_icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.head_search {
