page{
  background-color: #a4d1eb;
}
.c1_box{
  width: 750rpx;
  height: 520rpx;
  position: relative;
  z-index: 99;
}
.pause_icon{
  position: absolute;
  width: 84rpx;
  height: 84rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  z-index: 999;
}
.v1_box{
  width:750rpx;
  height: 500rpx;
  position: absolute;
  top: 0;
}
video{
  width: 100%;
  height: 100%;
  display: block;
}
.i_ipt{
  width: 600rpx;
  margin: 0 auto;
  height: 80rpx;
  line-height: 80rpx;
  color: #333;
  border-bottom:1rpx solid #fff;
  margin-bottom: 40rpx;
}
.b_btn{
  width: 600rpx;
  margin: 0 auto;
  height: 80rpx;
  line-height: 80rpx;
  text-align:center;
  background: rgb(71, 136, 75);
  border-radius: 10rpx;
  color: #fff;
  font-size:30rpx;
}