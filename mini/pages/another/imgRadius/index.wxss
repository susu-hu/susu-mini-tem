/* pages/another/imgRadius/index.wxss */
page {
  background-color: #fff;
}

.mb20 {
  margin: 20rpx auto;
  color: #333;
  font-size: 29rpx;
  padding: 0 20px;
}

.imgbox {
  width: 1151rpx;
  height: 711rpx;
  border-radius: 50%;
  margin-top: -242rpx;
  overflow: hidden;
}

.im {
  width: 100%;
  height: 100%;
}

.box {
  width: 750rpx;
  height: 300px;
  border-radius: 100% 100% 100% 100% / 0% 0% 18% 18%;
}

.clip-path-img {
  width: 750rpx;
  height: 300px;
  clip-path: ellipse(75% 50% at 50% 35%);
}

.a {
  border-radius: 50% 50% 50% 50% / 0% 0% 18% 18%;
  width: 750rpx;
  height: 300px;
  margin: 30px auto;
  background-color: #222;
}

.b {
  width: 750rpx;
  height: 300px;
  margin: 30px auto;
  background-color: #aaaaff;
  border-radius: 50% / 100% 100% 0 0;
}

.c {
  border-radius: 100% 0 0 0;
  width: 750rpx;
  height: 300px;
  margin: 30px auto;
  background-color: #aa557f;
}

.d {
  border-radius: 100% 0 0 100% / 50%;
  width: 750rpx;
  height: 300px;
  margin: 30px auto;
  background-color: #00aa7f;
}