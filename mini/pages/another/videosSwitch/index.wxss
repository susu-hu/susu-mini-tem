/* pages/another/videosSwitch/index.wxss */
view, picker, textarea, button, navigator { word-break: break-word; background-position: 50% 50%; background-repeat: no-repeat; background-size: 100% 100%; background-origin: padding-box; background-clip: padding-box; line-height: 1; box-sizing: border-box; background-color: transparent; border: none; padding: 0; margin: 0; border-radius: 0; display: block; position: relative; }
.content { width: 100%; height: 100%; position: absolute !important; left: 0; top: 0; background-color: #fff; display: flex; flex-wrap: wrap; justify-content: center; }
.content .video { width: 700rpx; height: 390rpx; margin-top: 50rpx; margin-bottom: 50rpx; border: 1rpx solid;}
.content .video .poster { width: 100%; height: 100%; position: absolute; top: 0; left: 0; }
.content .video .play{ width: 100%; height: 100%; position: absolute; top: 0; left: 0; }
.content .video .play image{ width:120rpx; height:120rpx; position:absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); }
.content .video .title{ width: 640rpx; height: auto; position: absolute; left: 55rpx; bottom: 30rpx; font-size: 30rpx; color:#ffffff; text-align: left; }
.content .video video { width: 100%; height: 100%; }