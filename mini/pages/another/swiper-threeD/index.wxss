/* pages/another/swiper-threeD/index.wxss */
.swiper { 
  width: 100%; 
  height: 600rpx; 
  background-color: #eee; 
}
.swiper .item { 
  display: flex; 
  justify-content: center; 
  align-items: center; 
}
.swiper .item image { 
  height: 90%; 
}
.swiper .item .active {
  transform: scale(1);
  transition: all .3s ease-in 0s;
  border-radius: 15rpx;
 }
.swiper .item .no-active { 
  transform: scale(.8); 
  transition: all .3s ease-in 0s; 
  opacity: .3; 
}
/* infinite	指定动画应该播放无限次（永远） */
.scroll{
  width: 50px;
  height: 50px;
  border-radius: 50%;
  animation:scroll alternate linear infinite 1.5s;
  -webkit-animation:scroll alternate linear infinite 1.5s; /* Safari 和 Chrome */
}
.scroll image{
  width: 50px;
  height: 50px;
  border-radius: 50%;
}
/* 从头到尾速度相同 linear
   动画无限次播放   infinite
   动画轮流反向播放 alternate
   低速开始和结束 ease-in-out	
*/
@keyframes scroll{
  from {
    margin-left: 0%;
  }
  to {
    margin-left: calc(100% - 100px);
  }
}

/* 360转圈圈 */
.circle{
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin: 20rpx calc((100% - 100px) / 2)  0 calc((100% - 100px) / 2);
  animation: cirimg linear infinite 5s;
}
@keyframes cirimg{
  from{
    transform:rotate(-360deg);
  }
  to{
    transform:rotate(360deg);
  }
}

/* 放大图片 */
.scaleImg{
  width:50px;
  height:50px;
  border-radius: 50%;
  margin: 10rpx auto 0;
  display: block;
  animation: scaleImg infinite 1.5s;
}
@keyframes scaleImg{
  from{
    transform: scale(0.6);
  }
  to{
    transform: scale(1);
  }
}
/* 无限反转 */
.f_reverse{
  width:60px;
  height:60px;
  margin: 20rpx auto;
  background-color:#a8c992;
  animation: f_reverse infinite 1.2s;
}
@keyframes f_reverse{
  0% {
    transform: perspective(120px) rotateX(0deg) rotateY(0deg);
  } 
  50% {
    transform: perspective(120px) rotateX(-180deg) rotateY(0deg);
  } 
  100% {
    transform: perspective(120px) rotateX(-180deg) rotateY(-179.9deg);
  }
}
/* 进度条加载 */
.load1 {
  width: 50px;
  height: 60px;
  margin: 50rpx auto 0;
}
.load1>view{
  background-color: #a8c992;
  height: 100%;
  width: 6px;
  float: left;
  margin-right: 4px;
  animation: stretchdelay 1.2s infinite ease-in-out;
}
.load1>.rect2{
  animation-delay: -1.1s;
}
.load1>.rect3{
  animation-delay: -1.0s;
}
.load1>.rect4{
  animation-delay: -0.9s;
}
.load1>.rect5{
  animation-delay: -0.8s;
}
@-webkit-keyframes stretchdelay {
  0%, 40%, 100% { -webkit-transform: scaleY(0.4) }
  20% { -webkit-transform: scaleY(1.0) }
}
@keyframes stretchdelay {
  0%, 40%, 100% {
    transform: scaleY(0.4);
    -webkit-transform: scaleY(0.4);
  }  20% {
    transform: scaleY(1.0);
    -webkit-transform: scaleY(1.0);
  }
}


/* 进度条 */
.loading-row{
  width: 100%;
  display: flex;
  justify-content: space-around;
}
.loading-cell{
  width: 100%;
  text-align: center;
}
.circle-line{
  width: 100px;
  height: 100px;
  display: inline-block;
  position: relative;
}
.circle-line text{
  display: block;
  width: 50%;
  height: 5px;
  opacity: .7;
  position: absolute;
  top: calc(50% - 2.5px);
  left: 0px;
  transform-origin: center right; 
  animation: circle 1.5s linear infinite; 
}
.circle-line text::before{
  content: '';
  display: block;
  width: 15px;
  height: 5px;
  position: absolute;
  top: 0;
  right: 10px;
  background-color: #a8c992;
}
.circle-line text:nth-child(1){
  transform: rotate(0deg);
  animation-delay: 0.2s;
}
.circle-line text:nth-child(2){
  transform: rotate(45deg);
  animation-delay: 0.4s;
}
.circle-line text:nth-child(3){
  transform: rotate(90deg);
  animation-delay: 0.6s;
}
.circle-line text:nth-child(4){
  transform: rotate(135deg);
  animation-delay: 0.8s;
}
.circle-line text:nth-child(5){
  transform: rotate(180deg);
  animation-delay: 1s;
}
.circle-line text:nth-child(6){
  transform: rotate(225deg);
  animation-delay: 1.2s;
}
.circle-line text:nth-child(7){
  transform: rotate(270deg);
  animation-delay: 1.4s;
}
.circle-line text:nth-child(8){
  transform: rotate(315deg);
  animation-delay: 1.6s;
}
@keyframes circle {
  0%{
      opacity: 0.05;
  }
  100%{
      opacity: 0.9;
  }
}
