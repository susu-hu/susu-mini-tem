.content .but .input input { width: 100%; font-size: 24rpx; letter-spacing: 1.5; color: #FFFFFF; padding: 0 18rpx; }
.content .but .input .placeholder-class { font-size: 24rpx; letter-spacing: 1.5; color: #FFFFFF; }
.content .but button { width: 200rpx; height: 85rpx; line-height: 85rpx; background-color: #0a4935; color: #ffffff; font-size: 28rpx; text-align: center; border-radius: 50rpx; }