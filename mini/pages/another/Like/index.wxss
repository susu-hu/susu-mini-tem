.content .barrage { width: 540rpx; height: 416rpx; position: absolute; left: 30rpx; bottom: 210rpx; }
.content .barrage .scroll-y { width: 100%; height: 100%; }
.content .barrage .scroll-y .item { font-size: 24rpx; margin-bottom: 4rpx; border-radius: 24rpx; color: #ffffff; background-color: rgba(0, 0, 0, 0.25); display: table; line-height: 40rpx; padding-right: 16rpx; }
.content .barrage .scroll-y .item view { display: inline-block; padding: 8rpx 14rpx; margin: 0 10rpx 0 4rpx; }
.content .barrage .scroll-y .item .active { background-color: rgba(238, 100, 82, 0.8); border-radius: 24rpx }
/* 滚动条隐藏 */
.content .barrage .scroll-y ::-webkit-scrollbar { display: none; width: 0 !important; height: 0 !important; -webkit-appearance: none; background: transparent; }


.content .but { width: 100%; position: absolute; left: 0; bottom: 100rpx; display: flex; justify-content: space-around; align-items: center; z-index: 1; }
