}
.na_box{
  width: 70rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.n1::after{
  content: '';
  width: 2rpx;
  height: 44rpx;
  background: #eee;
  position: absolute;
  top: -4rpx;
  left: -7rpx;
}
