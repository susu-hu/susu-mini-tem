/* pages/scroll/index.wxss */
page {
  background-color: #fff;
}

.top {
  width: 710rpx;
  height: 300rpx;
  margin: 0 auto;
  padding: 30rpx 0;
}

.top_con {
  border-radius: 20rpx;
  background: #e0bbc3;
  width: 710rpx;
  height: 300rpx;
  box-sizing: border-box;
  padding: 49rpx 28rpx 48rpx;
  font-size: 27rpx;
  color: #FFFFFF;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* con */
.con {
  margin: 0 auto;
}

.left {
  width: 183rpx;
  margin-right: 25rpx;
  background: #F5F5F5;
  padding-bottom: env(safe-area-inset-bottom);
  padding-bottom: constant(safe-area-inset-bottom)
}

.right {
  width: 542rpx;
  margin-right: 20rpx;
  padding-bottom: env(safe-area-inset-bottom);
  padding-bottom: constant(safe-area-inset-bottom)
}

.caname {
  text-align: center;
  min-height: 100rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #666666;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
}

.pre_c {
  border-radius: 0 0 20rpx;
}

.next_c {
  border-radius: 0 20rpx 0 0;
}

.chosed {
  background-color: #fff;
  color: #e0bbc3;
}

.t_name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

/* goodslist */
.item {
  /*padding-bottom: 30rpx;*/
  border-bottom: 1px solid #ccc;
  margin-bottom: 30rpx;
}

.goods-item {
  padding-bottom: 30rpx;
}

.item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.item_img {
  width: 132rpx;
  height: 132rpx;
  background: #FFFFFF;
  border-radius: 10rpx;
  margin-right: 30rpx;
}

.item_name {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 370rpx;
}

.name {
  font-size: 22rpx;
  color: #333333;
}

.stock_text {
  font-size: 20rpx;
  font-weight: bold;
  color: #333333;
}

.s_price {
  font-size: 20rpx;
  color: #c02e2e;
}

.item_input {
  margin-left: 23rpx;
  width: 180rpx;
  height: 40rpx;
  border: 1rpx solid #CCCCCC;
  border-radius: 20rpx;
  /* line-height:40rpx; */
  text-align: center;
  font-size: 20rpx;
  color: #333333;
}

.p_class {
  font-size: 20rpx;
  color: #999999;
}

.tip {
  margin-top: 14rpx;
  font-size: 20rpx;
  font-weight: bold;
  color: #666666;
}

/* 隐藏scroll-view的滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.no_tip {
  display: block;
  padding-top: 40rpx;
  font-size: 28rpx;
  color: #666666;
}

.goods_none {
  width: 150rpx;
  height: 150rpx;
}