.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  padding-top: 30rpx;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0px -2rpx 3rpx 0px rgba(227, 227, 227, 0.25);
}
.tab-bar-item{
  position: absolute;
  top: 30rpx;
  left: 0;
  width: 20%;
  height: 100rpx;
}
.tab-bar-item:nth-child(2) {
  left: 20%;
}

.tab-bar-item:nth-child(3){
  left: 60%;
}
.tab-bar-item:nth-child(4) {
  left: 80%;
}

.tab-bar-item .cover_image {
  width: 54rpx;
  height: 54rpx;
  margin: 0 auto;
  margin-bottom: 10rpx;
}

.tab-bar-item .cover_view {
  font-size: 20rpx;
  text-align: center;
}

.logo{
  position: absolute;
  top: 0;
  left: 50%;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-left: -50rpx;
}