/* components/verifycode/verifycode.wxss */

 .key-input{
  position: fixed;
  top: -100rpx;
  width: 100rpx;
  height: 20rpx;
} 

.wx-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
}

.verify-view{
  position: fixed;
  z-index: 5000;
  width: 488rpx;
  height: 340rpx;
  top: 40%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #576071;
  text-align: center;
  border-radius: 3px;
  overflow: hidden;
}

.icon{
  position: fixed;
  display: block;
  width: 40rpx;
  height: 40rpx;
  right: 10rpx;
  top: 10rpx;
}
.verify-title{
  position: fixed;
  display: block;
  width: 100%;
  height: 30rpx;
  top: 50rpx;
  font-size: 32rpx;
  color: #fff;
}
.verify-content{
  position: fixed;
  display: block;
  width: 100%;
  height: 30rpx;
  top: 115rpx;
  font-size: 24rpx;
  color: #C5C5C5;
}
.verify-code-view{
  position: fixed;
  width: 448rpx;
  height: 60rpx;
  top: 205rpx;
  left: 20rpx;
}

.verify-input-view{
  float: left;
  width: 49.66rpx;
  height: 52rpx;
  margin-left: 30rpx;
}
.verify-input-view-first{
  margin-left: 0rpx;
}
.verify-text{
  float: left;
  display: block;
  width: 49.66rpx;
  height: 52rpx;
  border: 1rpx #ccc solid;
  color: #fff;
  text-align: center;
  font-size: 30rpx;
}

